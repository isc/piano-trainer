<score-partwise version="3.0">
  <work>
    <work-title>Turn Diatonic Test</work-title>
  </work>
  <part-list>
    <score-part id="P1">
      <part-name/>
    </score-part>
  </part-list>
  <part id="P1">
    <measure number="1">
      <attributes>
        <divisions>4</divisions>
        <key>
          <!-- E-flat major: 3 flats (Bb, Eb, Ab) -->
          <fifths>-3</fifths>
          <mode>major</mode>
        </key>
        <time>
          <beats>4</beats>
          <beat-type>4</beat-type>
        </time>
        <clef>
          <sign>G</sign>
          <line>2</line>
        </clef>
      </attributes>
      <!-- Eb5 with delayed turn, NO accidentals -->
      <!-- In Eb major, diatonic intervals give: F above (2 semitones), D below (1 semitone) -->
      <!-- NOT Db (2 semitones) which would be a fixed whole step -->
      <!-- Expected sequence: Eb5, F5, Eb5, D5, Eb5 (5 notes) -->
      <note>
        <pitch>
          <step>E</step>
          <alter>-1</alter>
          <octave>5</octave>
        </pitch>
        <duration>8</duration>
        <type>half</type>
        <notations>
          <ornaments>
            <delayed-turn/>
          </ornaments>
        </notations>
      </note>
      <!-- Final note to complete measure -->
      <note>
        <pitch>
          <step>G</step>
          <octave>5</octave>
        </pitch>
        <duration>8</duration>
        <type>half</type>
      </note>
    </measure>
  </part>
